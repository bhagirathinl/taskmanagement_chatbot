# Production Environment Variables Template
# Copy this to .env.production and fill in your actual values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=chatbot_db
MYSQL_USER=chatbot_user
MYSQL_PASSWORD=your_secure_db_password_here

# Application Ports (use internal ports for production with nginx)
TASKS_APP_PORT=3000
CHATBOT_PORT=4000
CHATBOT_UI_PORT=4500
AVATAR_UI_PORT=5173

# Domain Configuration (update with your actual domain)
DOMAIN=your-domain.com
# For demo without domain, use your EC2 public IP
# DOMAIN=xx.xx.xx.xx

# OpenAI API Key (required for chatbot)
OPENAI_API_KEY=your_openai_api_key_here

# Akool API Configuration (required for avatar - old avatar-ui)
VITE_OPENAPI_HOST=https://openapi.akool.com
VITE_OPENAPI_TOKEN=your_akool_token_here
VITE_SERVER_BASE=/streaming/avatar

# Simple Avatar UI Configuration (new avatar implementation)
AKOOL_API_TOKEN=your_akool_api_token_here
AVATAR_ID=dvp_Alinna_realisticbg_20241224
VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Task API Configuration
API_BASE_URL=http://app:3000
VITE_TASK_API_BASE_URL=http://tasks_app:3000

# Node Environment
NODE_ENV=production

# TTS Configuration
ENABLE_TTS=true
TTS_VOICE=nova

# Security (optional but recommended)
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here
